{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}