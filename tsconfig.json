{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*", "demo/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "reportFiles": ["src/**/*"]
  }
}